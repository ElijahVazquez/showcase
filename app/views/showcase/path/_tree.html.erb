<details open class="flex flex-col">
  <%= tag.summary tree.id.titleize, class: [ "hover:bg-indigo-50 font-medium text-black text-base py-2 pl-4 cursor-pointer", hidden: tree.root? ] %>

  <% tree.paths.each do |path| %>
    <article class="hover:bg-indigo-50 font-medium text-black text-base <%= "bg-indigo-50" if path.id == params[:id] %>">
      <%= link_to path.basename.titleize, page_path(path.id), class: "inline-block w-full py-2 px-#{tree.root? ? 4 : 8}" %>
    </article>
  <% end %>
</details>
