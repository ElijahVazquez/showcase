<details open class="flex flex-col">
  <%= tag.summary tree.id.titleize, class: [ "hover:bg-indigo-50 font-medium text-black text-base py-2 pl-4 cursor-pointer", hidden: tree.root? ] %>

  <% tree.paths.each do |path| %>
    <article class="hover:bg-indigo-50 font-medium text-black text-base py-2 px-5 pl-4 <%= "bg-indigo-50" if current_page?(id: path.id) %>">
      <%= link_to path.basename.titleize, display_path(path.id), class: { "px-4": !tree.root? } %>
    </article>
  <% end %>
</details>
