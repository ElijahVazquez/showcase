<details open class="flex flex-col">
  <%= tag.summary tree.id.titleize, class: [ "font-medium text-black text-base py-2 pl-4 cursor-pointer", hidden: tree.root? ] %>

  <% tree.paths.each do |path| %>
    <article class="font-medium text-black text-base py-2 px-5 pl-4 hover:bg-coolGray-100">
      <%= link_to path.basename.titleize, display_path(path.id) %>
    </article>
  <% end %>
</details>
